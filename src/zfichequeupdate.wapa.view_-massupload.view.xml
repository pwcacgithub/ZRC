<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="UpdateCheque.controller.MassUpload"                                                                                                                               
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">                                                                                                                                      
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="{i18n>title}">                                                                                                                                                                                                                                 
				<content>                                                                                                                                                                                                                                                  
					                                                                                                                                                                                                                                                          
					<f:SimpleForm title="" editable="true" layout="ResponsiveGridLayout">                                                                                                                                                                                     
						<f:content>                                                                                                                                                                                                                                              
							<Label text="Company Code"></Label>                                                                                                                                                                                                                     
							<Input id="idCompanyCode" width="100px" showSuggestion="true" showValueHelp="true" valueHelpRequest="handleValueHelp" suggestionItems="{/DbuknSet}">                                                                                                    
								<suggestionItems>                                                                                                                                                                                                                                      
									<core:Item text="Bukrs"></core:Item>                                                                                                                                                                                                                  
								</suggestionItems>                                                                                                                                                                                                                                     
							</Input>                                                                                                                                                                                                                                                
							<Label text="Document File" required="true"></Label>                                                                                                                                                                                                    
							<u:FileUploader id="idDocFile" tooltip="Upload your file containg document details" width="250px" uploadComplete="handleUploadComplete"/>                                                                                                               
							<Label text="Background"></Label>                                                                                                                                                                                                                       
							<CheckBox id="idBackground" selected="false"></CheckBox>                                                                                                                                                                                                
							<Label text=""></Label>                                                                                                                                                                                                                                 
							<Button text="Upload" icon="sap-icon://upload" width="120px" press="handleUpload"></Button>                                                                                                                                                             
						</f:content>                                                                                                                                                                                                                                             
					</f:SimpleForm>                                                                                                                                                                                                                                           
					                                                                                                                                                                                                                                                          
				</content>                                                                                                                                                                                                                                                 
				<footer>                                                                                                                                                                                                                                                   
					<Bar>                                                                                                                                                                                                                                                     
						<contentLeft>                                                                                                                                                                                                                                            
							<Button icon="sap-icon://message-popup" tooltip="Messages" press="handleMessagesPress"></Button>                                                                                                                                                        
							<Button icon="sap-icon://reset" tooltip="Clear Msgs" press="clearMessages"></Button>                                                                                                                                                                    
						</contentLeft>                                                                                                                                                                                                                                           
					</Bar>                                                                                                                                                                                                                                                    
				</footer>                                                                                                                                                                                                                                                  
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    